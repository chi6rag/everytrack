.ui.two.column.middle.aligned.relaxed.fitted.stackable.grid
  .right.aligned.column
    %h1
      %i.sign.in.icon
      Check-in to your everytrack.
    .ui.right.aligned.segment
      -#
        %a.ui.google.plus.primary.button{href: "/"}
          %i.google.plus.icon
          Login with G+
      %a.ui.green.button{href: "/users/sign_up"}
        Sign Up
  .column
    - if flash[:notice]
      %p.ui.message.alert= flash[:notice]
    - if flash[:alert]
      %p.ui.message.alert= flash[:alert]

    .ui.card
      .content
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .ui.message
            You'll get confirmation email once you sign up, if you don't, go to the
            %a{href: "/users/confirmation/new"} confirmation link.
          = devise_error_messages!
          - if devise_mapping.rememberable?
            .ui.right.aligned.segment
              .ui.toggle.checkbox
                = f.check_box :remember_me, {name: "rememberable"}
                = f.label :remember_me
          .two.fields
            .required.field
              = f.label :email
              .ui.icon.input
                = f.email_field :email, autofocus: true, placeholder: "Email"
                %i.user.icon
            %br/
            .required.field
              %label Password
              .ui.icon.input
                = f.password_field :password, autocomplete: "off", placeholder: "Password"
                %i.lock.icon
            %br/
            = f.submit "Check-in", {class: "ui green basic button"}
      .extra.content
        %a.right.floated.created
        %a{:href => "http://twitter.com/SarupBanskota"} Tweet to @SarupBanskota
